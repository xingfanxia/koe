{
  "name": "koe",
  "version": "1.0.1",
  "description": "Voice transcription with global hotkey support",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && electron .",
    "dev": "tsc && electron .",
    "test": "vitest run",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "release": "./scripts/release.sh"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/ws": "^8.5.10",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.0",
    "vitest": "^3.0.0"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.0",
    "electron-store": "^8.1.0",
    "keyspy": "^1.1.1",
    "openai": "^4.102.0",
    "ws": "^8.18.3"
  },
  "build": {
    "appId": "com.koe.app",
    "productName": "Koe",
    "icon": "assets/icon.icns",
    "files": [
      "dist/**/*.js",
      "assets/**/*"
    ],
    "mac": {
      "notarize": false,
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/icon.icns",
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist",
      "hardenedRuntime": true,
      "extendInfo": {
        "NSMicrophoneUsageDescription": "Koe needs microphone access for voice transcription.",
        "NSAccessibilityUsageDescription": "Koe needs accessibility access to insert transcribed text at your cursor."
      }
    },
    "extraResources": []
  }
}
